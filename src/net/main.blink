option ServerOutput = "../server/blink.luau"
option ClientOutput = "../client/blink.luau"

struct PlayerCharacterData {
	Model: Instance?,
	RespawnAllowed: boolean
}

event PlayerCharacterChange {
	From: Server,
	Type: Reliable,
	Call: ManySync,
	Data: PlayerCharacterData
}

event RequestRespawn {
	From: Client,
	Type: Reliable,
	Call: SingleSync
}
